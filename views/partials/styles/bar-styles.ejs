<style>

*, *::before, *::after {
    margin: 0; padding: 0; box-sizing: border-box;
}

body {
    background-color: black;
    font-family: sans-serif;
}

.bar {
    margin: 2rem;
    padding: 2rem;
    position: relative;
    background-color: white;
    height: 90%;
    max-width: 500px;
}

.graph div {
    background-color: attr(data-color);
    position: relative;
    margin-left: 2rem;
}

.graph div::after {
    content: attr(data-value);
    font-weight: bold;
    position: absolute;
    background-color: blue;
    color: white;
    bottom: 0;
}

.graph {
    height: 300px;
    border-left: 1px solid black;
    border-bottom: 1px solid black;
    display: flex;
    align-items: flex-end;
    padding-left: 1rem;
    margin: 2rem;
}

.graph::before {
    content: "<%= units %>";
    position: absolute;
    left: -0.5rem;
    top: 50%;
    transform: rotateZ(-90deg);
    transform-origin: top;
    text-transform: capitalize;
}

.graph::after {
    content: "<%= scale %>";
    position: absolute;
    top: 6rem;
    left: 4.5rem;
}

.legend {
    background-color: cornflowerblue;
    position: absolute;
    top: 1rem;
    right: 1rem;
    padding: 1rem;
}
.legend ul {
    
    list-style: none;
}

.legend span {
    display: inline-block;
    height: 16px;
    width: 16px;
}

            
</style>